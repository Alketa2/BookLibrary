{
  "info": {
    "name": "LabCourse1 API",
    "_postman_id": "labcourse1-collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base}}/api/auth/register",
          "host": [
            "{{base}}"
          ],
          "path": [
            "api",
            "auth",
            "register"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"fullName\": \"Test User\", \"email\": \"test@ex.com\", \"password\": \"Test123$\"}"
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base}}/api/auth/login",
          "host": [
            "{{base}}"
          ],
          "path": [
            "api",
            "auth",
            "login"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"email\": \"test@ex.com\", \"password\": \"Test123$\"}"
        }
      }
    },
    {
      "name": "Refresh",
      "request": {
        "method": "POST",
        "url": {
          "raw": "{{base}}/api/auth/refresh",
          "host": [
            "{{base}}"
          ],
          "path": [
            "api",
            "auth",
            "refresh"
          ]
        }
      }
    },
    {
      "name": "Books - List",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base}}/api/books",
          "host": [
            "{{base}}"
          ],
          "path": [
            "api",
            "books"
          ]
        }
      }
    },
    {
      "name": "Admin Stats",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "url": {
          "raw": "{{base}}/api/admin/stats",
          "host": [
            "{{base}}"
          ],
          "path": [
            "api",
            "admin",
            "stats"
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "base",
      "value": "http://localhost:5000"
    },
    {
      "key": "accessToken",
      "value": ""
    }
  ]
}